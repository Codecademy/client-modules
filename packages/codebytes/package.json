{
  "name": "@codecademy/codebytes",
  "description": "Codebytes Code Editor",
  "version": "0.6.2",
  "author": "Codecademy Engineering <dev@codecademy.com>",
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "dist/**/[A-Z]**/[A-Z]*.js",
    "dist/**/[A-Z]**/index.js"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Codecademy/client-modules.git"
  },
  "peerDependencies": {
    "@codecademy/tracking": ">=0.17.0",
    "react": ">=16.8.1",
    "react-dom": ">=16.8.1",
    "@codecademy/gamut": "*",
    "@codecademy/gamut-icons": "*",
    "@codecademy/gamut-styles": "*",
    "@codecademy/variance": "*"
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@monaco-editor/react": "4.3.1",
    "js-base64": "^3.6.0",
    "jsuri": "^1.3.1",
    "monaco-editor": ">= 0.25.0 < 1",
    "react-resize-observer": "^1.1.1"
  },
  "scripts": {
    "verify": "tsc --noEmit",
    "build:compile": "babel ./src --out-dir ./dist --copy-files --extensions \".ts,.tsx\"",
    "build:clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "yarn build:clean && yarn build:compile && yarn build:types",
    "build:watch": "yarn build && onchange ./src -- yarn build:compile && yarn build:types",
    "lernaBuildTask": "yarn build"
  },
  "license": "MIT",
  "devDependencies": {
    "@codecademy/gamut-tests": "*",
    "@codecademy/tracking": "0.18.0",
    "@emotion/jest": "^11.3.0",
    "@testing-library/dom": "^7.31.2",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "3.2.1",
    "@testing-library/user-event": "13.1.1",
    "@types/jsuri": "^1.3.30",
    "@types/loadable__component": "^5.13.2",
    "monaco-editor-webpack-plugin": "1.9.1",
    "@codecademy/gamut": "*",
    "@codecademy/gamut-icons": "*",
    "@codecademy/gamut-styles": "*",
    "@codecademy/variance": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**"
  ]
}
